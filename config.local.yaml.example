# -----------------------------------------------------------------------------
# Storage Paths (machine-specific)
# -----------------------------------------------------------------------------
paths:
  # Path to PDB mmCIF mirror
  pdb_master: "/store/database/pdb/mmCIF"

# -----------------------------------------------------------------------------
# Model Paths (machine-specific)
# -----------------------------------------------------------------------------
models:
  AlphaFold3:
    container: "/store/containers/alphafold3.sif"
    model_dir: "/store/database/af3/models"
    databases_dir: "/store/database/af3"

  Protenix:
    container: "/store/containers/protenix.sif"

  ColabFold:
    container: "/store/containers/colabfold.sif"
